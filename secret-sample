apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: nginx
  labels:
    app: nginx
    life: dev
spec:
  selector:
    matchLabels:
      app: nginx
      life: dev
  replicas: 1
  template:
    metadata:
      name: nginx
      labels:
        app: nginx
        life: dev
    spec:
      restartPolicy: Always
      initContainers:
      - name: nginx-init
        image: nginx
        volumeMounts:
        - mountPath: /usr/local/nginx/html
          name: html
        env:
        - name: PASS
          valueFrom:
            secretKeyRef:
              name: pass
              key: pass
        command: ['echo', '-n', '$PASS','>','/usr/local/nginx/html/index.html']
      containers:
      - name: nginx
        image: nginx
        ports:
        - containerPort: 80
        volumeMounts:
        - mountPath: /usr/local/nginx/html
          name: html
      volumes:
      - name: html
        emptyDir: {}
      - name: pass
        secret:
          secretName: pass

---

apiVersion: v1
kind: Service
metadata:
  name: nginx
  labels:
    app: nginx
    life: dev
spec:
  selector:
    app: nginx
    life: dev
  type: LoadBalancer
  ports:
  - port: 80
    targetPort: 80
